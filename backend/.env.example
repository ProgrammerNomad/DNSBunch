# Flask Configuration
FLASK_DEBUG=False
FLASK_ENV=production

# Server Configuration
PORT=5000

# CORS Settings (Update with your frontend domains in production)
CORS_ORIGINS=*

# DNS Settings
DNS_TIMEOUT=10
DNS_LIFETIME=30

# Rate Limiting (requests per minute per IP)
RATE_LIMIT=60
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_WINDOW=300
BLOCK_DURATION=60

# Logging
LOG_LEVEL=INFO
